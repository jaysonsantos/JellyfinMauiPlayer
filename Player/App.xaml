<?xml version = "1.0" encoding = "UTF-8" ?>
<Application
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:converters="clr-namespace:Player.Converters"
  xmlns:strings="clr-namespace:Player.Resources.Strings"
  x:Class="Player.App"
>
  <Application.Resources>
    <ResourceDictionary Source="Resources/Themes/LightTheme.xaml" />
    <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
    <ResourceDictionary>
      <converters:IsStringNotNullOrEmptyConverter x:Key="IsStringNotNullOrEmptyConverter" />
      <converters:IsNotNullConverter x:Key="IsNotNullConverter" />
      <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
      <converters:IsZeroConverter x:Key="IsZeroConverter" />
      <converters:PlayPauseConverter x:Key="PlayPauseConverter" />
      <x:Static x:Key="ResourceManager" Member="strings:AppResources.ResourceManager" />
    </ResourceDictionary>
  </Application.Resources>
</Application>
