<?xml version="1.0" encoding="utf-8" ?>
<ContentView
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:controls="clr-namespace:Player.Controls"
  x:Class="Player.Controls.SectionHeader"
  x:Name="This"
  x:DataType="controls:SectionHeader"
>
  <HorizontalStackLayout Spacing="10" Margin="0,10,0,10">
    <!-- Title -->
    <Label
      Text="{Binding Source={x:Reference This}, Path=Title}"
      FontSize="20"
      FontAttributes="Bold"
      TextColor="{DynamicResource PrimaryTextColor}"
      VerticalOptions="Center"
      HorizontalOptions="Start"
    />

    <!-- Optional Action Button -->
    <Button
      Text="{Binding Source={x:Reference This}, Path=ActionText}"
      Command="{Binding Source={x:Reference This}, Path=ActionCommand}"
      IsVisible="{Binding Source={x:Reference This}, Path=ShowAction}"
      BackgroundColor="{DynamicResource TransparentColor}"
      TextColor="{DynamicResource PrimaryColor}"
      FontSize="14"
      Padding="8,4"
      HorizontalOptions="End"
    />
  </HorizontalStackLayout>
</ContentView>
