<?xml version="1.0" encoding="utf-8" ?>
<ContentView
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:controls="clr-namespace:Player.Controls"
  x:Class="Player.Controls.LoadingCard"
  x:Name="This"
  x:DataType="controls:LoadingCard"
>
  <Border
    Padding="0"
    StrokeThickness="0"
    BackgroundColor="{DynamicResource TransparentColor}"
    MinimumWidthRequest="{Binding Source={x:Reference This}, Path=CardWidth}"
    MinimumHeightRequest="{Binding Source={x:Reference This}, Path=CardHeight}"
  >
    <VerticalStackLayout Spacing="6">
      <!-- Skeleton Image -->
      <Border
        StrokeThickness="0"
        HeightRequest="{Binding Source={x:Reference This}, Path=ImageHeight}"
        BackgroundColor="{DynamicResource PrimaryColor}"
      >
        <Border.StrokeShape>
          <RoundRectangle CornerRadius="8" />
        </Border.StrokeShape>
      </Border>

      <!-- Skeleton Title Lines -->
      <Border
        StrokeThickness="0"
        HeightRequest="16"
        BackgroundColor="{DynamicResource PrimaryColor}"
        IsVisible="{Binding Source={x:Reference This}, Path=ShowTitle}"
      >
        <Border.StrokeShape>
          <RoundRectangle CornerRadius="4" />
        </Border.StrokeShape>
      </Border>

      <Border
        StrokeThickness="0"
        HeightRequest="16"
        WidthRequest="100"
        BackgroundColor="{DynamicResource PrimaryColor}"
        HorizontalOptions="Start"
        IsVisible="{Binding Source={x:Reference This}, Path=ShowTitle}"
      >
        <Border.StrokeShape>
          <RoundRectangle CornerRadius="4" />
        </Border.StrokeShape>
      </Border>

      <!-- Skeleton Metadata Line -->
      <Border
        StrokeThickness="0"
        HeightRequest="12"
        WidthRequest="80"
        BackgroundColor="{DynamicResource PrimaryColor}"
        HorizontalOptions="Start"
        IsVisible="{Binding Source={x:Reference This}, Path=ShowMetadata}"
      >
        <Border.StrokeShape>
          <RoundRectangle CornerRadius="4" />
        </Border.StrokeShape>
      </Border>
    </VerticalStackLayout>
  </Border>
</ContentView>
