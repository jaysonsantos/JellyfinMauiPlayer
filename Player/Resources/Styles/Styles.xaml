  <Style TargetType="Page" ApplyToDerivedTypes="True">
    <Setter Property="Padding" Value="0" />
    <Setter Property="BackgroundColor" Value="{DynamicResource PageBackgroundColor}" />
  </Style>

  <Style TargetType="Shell" ApplyToDerivedTypes="True">
    <Setter Property="BackgroundColor" Value="{DynamicResource PageBackgroundColor}" />
    <Setter Property="ForegroundColor" Value="{DynamicResource TextColor}" />
    <Setter Property="TitleColor" Value="{DynamicResource TextColor}" />
    <Setter Property="DisabledColor" Value="{DynamicResource DisabledTextColor}" />
    <Setter Property="UnselectedColor" Value="{DynamicResource MutedTextColor}" />
    <Setter Property="NavBarHasShadow" Value="False" />
    <Setter Property="TabBarBackgroundColor" Value="{DynamicResource NavigationBarColor}" />
    <Setter Property="TabBarForegroundColor" Value="{DynamicResource PrimaryColor}" />
    <Setter Property="TabBarTitleColor" Value="{DynamicResource PrimaryColor}" />
    <Setter Property="TabBarUnselectedColor" Value="{DynamicResource MutedTextColor}" />
  </Style>

  <Style TargetType="NavigationPage">
    <Setter Property="BarBackgroundColor" Value="{DynamicResource NavigationBarColor}" />
    <Setter Property="BarTextColor" Value="{DynamicResource TextColor}" />
    <Setter Property="IconColor" Value="{DynamicResource PrimaryColor}" />
  </Style>

  <Style TargetType="TabbedPage">
    <Setter Property="BarBackgroundColor" Value="{DynamicResource NavigationBarColor}" />
    <Setter Property="BarTextColor" Value="{DynamicResource TextColor}" />
    <Setter Property="UnselectedTabColor" Value="{DynamicResource MutedTextColor}" />
    <Setter Property="SelectedTabColor" Value="{DynamicResource PrimaryColor}" />
  </Style>
</ResourceDictionary>
