<?xml version="1.0" encoding="UTF-8" ?>
<Shell
  x:Class="Player.AppShell"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:pages="clr-namespace:Player.Pages"
  Title="Jellyfin Player"
  FlyoutBehavior="Flyout"
>
  <!-- Login Page (shown first, not in flyout) -->
  <ShellContent ContentTemplate="{DataTemplate pages:LoginPage}" Route="LoginPage" />

  <!-- Flyout Items (shown after login) -->
  <FlyoutItem Title="Home" Icon="home.png">
    <ShellContent ContentTemplate="{DataTemplate pages:HomePage}" Route="HomePage" />
  </FlyoutItem>

  <!-- Note: LibraryPage, ItemDetailPage, and VideoPlayerPage are registered 
       as routes in AppShell.xaml.cs and navigated to via GoToAsync() -->
</Shell>
